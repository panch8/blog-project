<%- include('partials/header'); -%>

  <h1>Compose</h1>
  <form action="/compose" method="post">
    <div class="form-group">
      <label >Title</label>
      <input type="text" class="form-control" name="postTitle"  />
    </div>

    <div class="form-group">
      <label >Post</label>
      <textarea
        class="form-control"
        name="postBody"
        rows="20"
      ></textarea>
    </div>
    <button type="submit" class="btn btn-primary btn-large">Publish</button>
  </form>
</div>
